<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- Navbar -->
    <%- include('./partials/nav.ejs') %>

    <!-- Body -->

    <!-- Home Section -->
    <section class="home">
      <div class="container">
        <div class="row">
          <div class="col-md-6 m-auto">
            <h3 class="fw-bold">Delivery Food Restaurant</h3>
            <p class="mt-3 lh-1.6">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Facere
              quis rerum aliquid sunt dolor placeat nam? Quos nam voluptatem
              consequatur.
            </p>
            <div class="buttons d-flex gap-3">
              <button class="btn main-btn">Order Now</button>
              <button class="btn second-btn">Learn More</button>
            </div>
          </div>
          <div class="col-md-6 mt-3">
            <div class="image">
              <img src="/images/waiter2.jpg" class="img-fluid rounded-3" />
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Home Section -->

    <!-- Categories Section -->
    <section class="categories mt-5">
      <div class="container">
        <h2 class="text-center fw-bold mt-4 mb-3 special-heading">
          Categories
        </h2>
        <p class="mb-5">Select From Our Best Categories Ever!</p>
        <div class="row">
          <% if (categories && categories.length > 0) { %> <%
          categories.forEach(category => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow-md">
              <div class="card-image p-4 text-center">
                <img
                  src="<%= category.image %>"
                  class="rounded-circle img-fluid"
                  alt="<%= category.name %>"
                />
              </div>
              <div class="card-body text-center">
                <h5 class="fw-bold"><%= category.name %></h5>
                <p class="text-muted"><%= category.description %></p>
              </div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-center">No categories available.</p>
          <% } %>
        </div>
      </div>
    </section>
    <!-- End Categories Section -->

    <!-- Landing Section -->
    <section class="landing mt-5">
      <div class="container">
        <div class="row">
          <div class="col-md-6 mb-5">
            <div class="image">
              <img
                src="/images/noodles.jpg"
                class="img-fluid rounded-3"
                alt="Noodles"
              />
            </div>
          </div>
          <div class="col-md-6 m-auto text-sm-center">
            <h3 class="fw-bold">We Have Fast Delivery</h3>
            <p class="mt-3 lh-1.6">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Ducimus
              enim architecto quas omnis, quis dolor labore ipsum? Asperiores,
              quae laudantium!
            </p>
            <div class="buttons d-flex gap-3 justify-content-center">
              <button class="btn main-btn">Order Now</button>
              <button class="btn second-btn">Learn More</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Landing Section -->

    <!-- Hot Section -->
    <section class="hot">
      <div class="container">
        <h2 class="text-center fw-bold mt-4 mb-3 special-heading">
          Hot Products
        </h2>
        <p class="text-center">Choose From Our Hot Products!</p>
        <div class="row mt-5">
          <% if (hotProducts && hotProducts.length > 0) { %> <%
          hotProducts.forEach(product => { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
              <div class="card-image">
                <img
                  src="<%= product.image %>"
                  alt="<%= product.name %>"
                  class="img-fluid"
                />
              </div>
              <div class="card-body text-center">
                <h5 class="fw-bold"><%= product.name %></h5>
                <p><%= product.description %></p>
                <div
                  class="price d-flex justify-content-center align-items-center gap-3"
                >
                  <h4 class="mb-0">$<%= product.price %></h4>
                  <button class="btn main-btn">Add To Cart</button>
                </div>
              </div>
            </div>
          </div>
          <% }); %> <% } else { %>
          <p class="text-center">No hot products available at the moment.</p>
          <% } %>
        </div>
      </div>
    </section>
    <!-- End Hot Section -->

    <!-- Image Section -->
    <section class="image-section p-5 mt-5">
      <div class="container">
        <div class="row text-center">
          <div class="col-md-3 py-5">
            <h4>232</h4>
            <h6 class="text-white-50">Clients</h6>
          </div>
          <div class="col-md-3 py-5">
            <h4>515</h4>
            <h6 class="text-white-50">Projects</h6>
          </div>
          <div class="col-md-3 py-5">
            <h4>1453</h4>
            <h6 class="text-white-50">Hours Of Support</h6>
          </div>
          <div class="col-md-3 py-5">
            <h4>31</h4>
            <h6 class="text-white-50">Workers</h6>
          </div>
        </div>
      </div>
    </section>
    <!-- End Image Section -->

    <!-- Why Choose Us -->
    <section class="why-us">
      <div class="container">
        <h2 class="text-center fw-bold mt-4 mb-3 special-heading">
          Why Choose Us?
        </h2>
        <p class="text-center">Choose Us Beacause We Are The Best!</p>
        <div class="row">
          <div class="col-md-4 mt-5">
            <div class="card rounded-3 shadow-lg">
              <div class="icon text-center p-4">
                <i class="fas fa-shipping-fast my-3 rounded-circle p-3"></i>
                <h4>Corporis voluptates officia eiusmod</h4>
                <p>
                  Consequuntur sunt aut quasi enim aliquam quae harum pariatur
                  laboris nisi ut aliquip
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-5">
            <div class="card rounded-3 shadow-lg">
              <div class="icon text-center p-4">
                <i class="fa-solid fa-motorcycle my-3 rounded-circle p-3"></i>
                <h4>Labore consequatur incidid dolore</h4>
                <p>
                  Aut suscipit aut cum nemo deleniti aut omnis. Doloribus ut
                  maiores omnis facere
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mt-5">
            <div class="card rounded-3 shadow-lg">
              <div class="icon text-center p-4">
                <i
                  class="fa-solid fa-car fa-chart-diagram my-3 rounded-circle p-3"
                ></i>
                <h4>Ullamco laboris ladore lore pan</h4>
                <p>
                  Excepteur sint occaecat cupidatat non proident, sunt in culpa
                  qui officia deserunt
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Why Choose Us -->

    <!-- Footer & JS Files -->
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
